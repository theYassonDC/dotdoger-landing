        // entry.target es el elemento que se est치 observando
        // Agregar la clase para animar
        entry.target.classList.add("about-card");
        // Dejar de observar
        observer.unobserve(entry.target);
      }
    });
  });
  const elemen2 = document.getElementById("about");
  observer2.observe(elemen2 as HTMLElement);
  let active = document.getElementById("javascript-txt")
  let dialog = document.querySelector("dialog")
  active?.addEventListener("click", () => {
    dialog!.showModal();
  })
</script>
