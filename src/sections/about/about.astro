<style>
  .animate_cards {
    animation: revealing_info_cards 1s both;
  }
  @keyframes revealing_info_cards {
    0% {
      opacity: 0;
      translate: 0px 50px 0px;
    }
    100% {
      opacity: 1;
      translate: 0px 0px 0px;
    }
  }

  .about-card {
