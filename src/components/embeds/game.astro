<dialog id="dialog-embed-game" class="h-full w-full bg-black/70 backdrop-blur-md animate-dialog">
  <div class="flex justify-center h-full w-full">
    <iframe
      title="Lumber Jack Game"
      src="https://tbot.xyz/lumber/"
      class="h-full"></iframe>
    <button id="closet-game" class="absolute top-0 right-0 bg-red-500 text-white font-mono p-4 font-semibold rounded-2xl hover:bg-red-700">X</button>
  </div>
</dialog>
<script>
  let btn = document.getElementById("closet-game");
  let dialog = document.querySelector("dialog");
  btn?.addEventListener("click", () => {
    dialog!.close();
  });
</script>
<style>
  .animate-dialog {
    animation: dialog-show 1s both;
  }

  @keyframes dialog-show {
    0% {
      opacity: 0;
      translate: 0px -100% 0px;
    }
    100% {
      opacity: 1;
      translate: 0px 0px 0px;
    }
  }
</style>