---
import CatIcon from "../icons/CatIcon.astro";
---

<div
  class="absolute top-0 w-full h-full bg-black/90 backdrop-blur-2xl flex flex-col gap-3 items-center justify-center z-40"
  id="loader-cat"
>
  <div id="catIcon-loader">
    <CatIcon />
  </div>
  <p class="text-white text-transform-animate font-bold text-center" id="text-loader">
    Cargando
    <span class="text-display-animate">.</span>
    <span class="text-display-animate">.</span>
    <span class="text-display-animate">.</span>
  </p>
</div>
<style>
  .text-transform-animate {
    animation: tracking-out-contract 1s both;
  }
  .text-display-animate {
    animation: text-outIn-contract 1s 0.5s infinite both;
    animation: text-outIn-contract 1s 0.5s infinite both;
    animation: text-outIn-contract 1s 0.5s infinite both;
  }

  @keyframes tracking-out-contract {
    0% {
      opacity: 0;
      translate: 0px -2rem 0px;
    }
    100% {
      translate: 0px 0px 0px;
      opacity: 1;
    }
  }
  @keyframes text-outIn-contract {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  
  .logo-animate {
    animation: logo-in-layout 2s both;
  }
  .text-animate {
    animation: text-in-layout 0.5s both;
  }
  @keyframes logo-in-layout {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  @keyframes text-in-layout {
    0% {
      translate: 0px 0px 0px;
      opacity: 1;
    }
    100% {
      opacity: 0;
      translate: 0px -1rem 0px;
    }
  }
</style>
